# =============================================================================
# NIST 800-53 Chatbot — Environment Configuration
# =============================================================================
# Copy to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# --- LLM Backend ---
# Primary: Ollama (local, privacy-first)
OLLAMA_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434

# Fallback: Google Gemini (cloud, requires API key)
# Get your key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=models/gemini-embedding-001

# --- API Authentication ---
# Set a strong random key to protect /api/chat and /api/ingest
# If empty, auth is disabled (dev mode only — never deploy without this)
API_KEY=

# --- Flask Backend ---
FLASK_PORT=5050
FLASK_DEBUG=false
SECRET_KEY=changeme-generate-a-real-secret-key

# --- CORS ---
# Comma-separated origins allowed to access the API
CORS_ORIGINS=http://localhost:5173,http://localhost:5050

# --- Visitor Tracking ---
VISITOR_DB_PATH=visitors.db
